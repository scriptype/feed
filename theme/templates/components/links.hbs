<div class="links" id="links" tabindex="-1">
  {{#each posts as |link|}}
    <section class="link entering" style="--i: {{@index}}">
      <a target="_blank" href="{{link.url}}" class="link-title" title="{{link.title}}">
        <h2>{{link.title}}</h2>
      </a>
      <span class="link-url">{{link.url}}</span>
      <ul class="link-tags" aria-label="tags">
      {{#each link.tags as |tag|}}
        <li class="link-tag-container">
          <a class="link-tag" href="{{tag.permalink}}">#{{tag.tag}}</a>
        </li>
      {{/each}}
      </ul>
    </section>
  {{/each}}
</div>
{{#with pagination}}
  <div class="pagination">
    <div class="pagination-buttons">
      {{#if previousPage}}
        <a href="{{previousPage}}" id="newer-page-link">« Newer</a>
      {{/if}}
      {{#if nextPage}}
        <a href="{{nextPage}}" id="older-page-link">Older »</a>
      {{/if}}
    </div>
  </div>
{{/with}}
