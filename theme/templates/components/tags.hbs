<nav class="tags">
  <details class="tags-list-container">
    <summary class="tags-list-toggle-label">Topics</summary>
    <ol class="tags-list">
      {{#each tags as |tag|}}
        <li class="tags-list-item" style="--i: {{@index}}">
          <a href="{{tag.permalink}}" class="tags-list-item-link">
            <span class="tag-hash">#</span>
            {{tag.tag}}
            <span class="tag-count-badge">{{tag.posts.length}}</span>
          </a>
        </li>
      {{/each}}
    </ol>
  </details>
</nav>
