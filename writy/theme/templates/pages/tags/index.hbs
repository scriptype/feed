{{#>base page="tags"}}
  <main class="all-tags-listing">
    {{>components/logo}}
    {{#if tags.length}}
      {{#each tags as |tag|}}
      <a href="{{tag.permalink}}" class="all-tags-listing-item" style="--i: {{@index}}; --importance: {{tagImportance ../tags tag}}">#{{tag.tag}}</a>
      {{/each}}
    {{else}}
      <h2>{{lookup 'tagsNotFoundHeader'}}</h2>
    {{/if}}
  </main>
